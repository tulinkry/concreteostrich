{define #content}
<h1>Seznam galerií</h1>

	{snippet galleries}

		{foreach $galleries as $gallery}
			{control galleries-$gallery->id}
			<hr />
		{/foreach}
		{*
			<table class="table table-striped">
			{foreach $galleries as $gallery}
				<tr>
					<td>{$gallery -> id}</td>
					<td>{$gallery -> name}</td>
				</tr>
				<tr>
					<td>
						{input }
			{/foreach}
			</table>
		*}
	{/snippet}

{/define}


{*
 * layout template
 *}


